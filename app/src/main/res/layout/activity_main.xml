<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="wrap_content"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <include layout="@layout/toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/vertical_appbar"/>

    <include layout="@layout/buttons_navigation"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size_buttons_navigation"
        android:layout_marginTop="55dp"/>

    <FrameLayout
        android:id="@+id/frame_for_fragments"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_top_fragments"
        android:layout_marginBottom="@dimen/marginBottom_fragments"/>

</RelativeLayout>